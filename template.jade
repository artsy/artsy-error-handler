extends ../../components/main_layout/templates/index

block head
  include ../../components/main_layout/templates/common_head

append locals
  - assetPackage = 'error_handler'

block body
  main#error-handler
    if code === 404
      h1 The page you were looking for doesn't exist.
    else
      h1 Internal Error
      if detail && showDetail
        pre= detail
    p Please contact <a href="mailto:support@artsy.net">support@artsy.net</a> with any questions.
